enums = {
    enum[terrain] = {
        plains
        hills
        farmland
        marsh
        forest
        mountain
        desert
        jungle
    }
}

types = {
    type[province_terrain_validation] = {
        path = "game/common/province_terrain"
        type_per_file = yes
    }
}

province_terrain_validation = {
    ## cardinality = 0..1
    default = enum[terrain]

    ## cardinality = 0..inf
    <province> = enum[terrain]
}